<div class="timesheet">
  <div class="timediv">
    <table class="timetable">
      <tr>
        <th colspan=2 >Время</th>
      </tr>
      <%= render :partial => 'week', :collection => @days %>
    </table>
  </div>
  <div id="plus">
    <%= link_to_remote(image_tag('add_32.ico'), :url => show_classroom_form_pairs_path) %>
  </div>
  <div id="classroom_form" style="display: none">
    <% remote_form_for :pairs, :url => add_classroom_pairs_path do |f| %>
      <%= f.label :building, 'Корпус' %>
      <%= f.select :building,
      options_for_select(@buildings.map {|b| [b.name, b.id]}) %>
      <%= observe_field 'pairs_building',
      :url => update_classrooms_pairs_path,
      :with => :building %>
      <div id="classroom">
        <%= f.label :classroom, 'Аудитория' %>
        <%= f.select :classroom, options_for_select(@classrooms.map {|c| [c.name, c.id]}) %>
      </div>
      <%= submit_tag 'Добавить' %>
    <% end %>
  </div>
</div>