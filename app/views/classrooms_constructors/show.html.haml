.workspace
  .plus
    = link_to_remote image_tag('add_32.ico'), :url => show_form_classrooms_constructor_path
  #form{:style => "display: none"}
    #form_closebutton
      = link_to_remote image_tag('close_16.ico'), :url => hide_form_classrooms_constructor_path
    .form
      - remote_form_for :pairs, :url => add_grid_classrooms_constructor_path do |f|
        = f.label :building, 'Корпус'
        = f.select :building,
        options_for_select(@buildings.map {|b| [b.name, b.id]})
        = observe_field 'pairs_building', :url => update_classrooms_classrooms_constructor_path, :with => :building
        #classroom
          = f.label :classroom, 'Аудитория'
          = f.select :classroom, options_for_select(@classrooms.map {|c| [c.name, c.id]})
        = submit_tag 'Добавить'