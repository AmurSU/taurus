%td
  - id = "container_classroom#{classroom}_week#{week_counter + 1}_day#{day}_pairtime#{pairtime}"
  .receiver{:id => "#{id}"}
  = drop_receiving_element id,
  = :url => update_state_pairs_path(:classroom => classroom, :week => week,
  = :day => day, :pair_number => sheetpair_counter + 1, :container => id),
  = :accept => 'pair',
  = :with => "'pair=' + element.id",
  = :hoverclass => 'hovered_receiver'