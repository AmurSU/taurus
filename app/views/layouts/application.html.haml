!!!
%html
  %head
    %title Система
    = javascript_include_tag 'jquery-1.4.4.min'
    = javascript_include_tag 'jquery-ui-1.8.6.custom.min'
    = javascript_tag 'jQuery.noConflict();'
    = javascript_include_tag :defaults
    = active_scaffold_includes
    = stylesheet_link_tag 'redmond/jquery-ui-1.8.6.custom'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'menu'
    = stylesheet_link_tag 'grid', :media => 'all'
    = stylesheet_link_tag 'group', :media => 'all'
    <link rel="shortcut icon" href="/favicon.ico" />
    = csrf_meta_tag
  %body
    - if admin_signed_in?
      = render 'layouts/admin_menu'
    - if supervisor_signed_in?
      = render 'layouts/supervisor_menu'
    - if editor_signed_in?
      = render 'layouts/editor_menu'
    - if dept_head_signed_in?
      = render 'layouts/department_menu'

    - if flash[:error]
      %p.error= flash[:error]
    - if flash[:notice]
      %p.notice= flash[:notice]

    = yield
