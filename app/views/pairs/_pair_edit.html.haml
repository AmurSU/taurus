.update_form{:id => "update_pair_#{@pair.id.to_s}"}
  - if flash[:error]
    .flash
      = flash[:error]
  - remote_form_for(@pair) do |f|
    %p{:id => "charge_card_block"}
      = 'Карта нагрузки'
      %br
      %input{:id => "charge_card", :size => 20, :value => "#{@pair.charge_card.name_for_pair_edit if @pair.charge_card}"}
    .subgroups
      - f.fields_for :subgroups, @pair.subgroups do |s|
        .subgroup
          %br
          %br
          = s.radio_button :number, 0
          = 'Без подгрупп'
          %br
          = s.radio_button :number, 1
          = 'Первая подгруппа'
          %br
          = s.radio_button :number, 2
          = 'Вторая подгруппа'
    %p
      = f.submit 'Сохранить'